<script>
  const quotes = [
    "Success is earned, not given.",
    "A real boss never quits, he evolves.",
    "Crypto is a battlefield. Stay sharp.",
    "Discipline is the key to every victory.",
    "Hustle in silence, let your success speak."
  ];

  let currentIndex = 0;

  function nextQuote() {
    currentIndex++;
    if (currentIndex >= quotes.length) currentIndex = 0;
    document.getElementById("quoteText").innerText = quotes[currentIndex];
  }
</script>

